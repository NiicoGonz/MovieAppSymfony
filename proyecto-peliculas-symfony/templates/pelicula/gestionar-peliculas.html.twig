{% extends 'base.html.twig' %}

{% block body %}

    <div class="container-fluid pb-4 mt-4">
        <h3 class="text-center">Gestionar peliculas</h3>
        <div class="row justify-content-center mt-4">
            <div class="d-grid gap-2 col-3 mx-auto">
                <a class="text-white btn btn-primary" href="{{ path( 'crear_pelicula' ) }}">
                    Crear pelicula
                </a>
            </div>
            <div class="col-md-11 mt-4">
                <table class="table table-dark table-striped table-hover text-center">
                    <thead>
                    <tr>
                        <th scope="col">Nombre</th>
                        <th scope="col">Sinopsis</th>
                        <th scope="col">Precio unitario</th>
                        <th scope="col">Tipo</th>
                        <th scope="col">Genero</th>
                        <th scope="col">Fecha de estreno</th>
                        <th scope="col">Acciones</th>
                    </tr>
                    </thead>
                    {% for pelicula in peliculas %}
                        <tr>
                            <td>{{ pelicula.nombre }}</td>
                            <td>{{ pelicula.sinopsis }}</td>
                            <td>{{ pelicula.precioUnitario }}</td>
                            <td>{{ pelicula.tipo }}</td>
                            <td>{{ pelicula.genero }}</td>
                            <td>{{ pelicula.fechaEstreno|date('Y/m/d') }}</td>
                            <td class="action">
                                <a class="text-white btn btn-primary"
                                   href="{{ path( 'editar_pelicula', {'id':pelicula.id} ) }}">
                                    Editar
                                </a>
                                <a class="text-white btn btn-danger"
                                   href="{{ path( 'eliminar_pelicula', {'id':pelicula.id} ) }}">
                                    Borrar
                                </a>
                            </td>
                        </tr>
                    {% endfor %}
                </table>
            </div>
        </div>
    </div>
{% endblock %}