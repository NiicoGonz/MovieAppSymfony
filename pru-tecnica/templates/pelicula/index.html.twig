{% extends 'base.html.twig' %}

{% block title %}Hello PeliculaContollerController!{% endblock %}

{% block body %}

<div class="container">

    <div class="margin-container">
    <h1>Lista De Peliculas</h1>
<table class="table table-dark table-striped">
    <tr>
        <th>Nombre</th>
        <th>Valor Unitario</th>
        <th>Sinposis</th>
        <th>Accion</th>
    </tr>
    {% for pelicula in peliculas %}
    <tr>
        <td>{{ pelicula.nombre }}</td>
        <td>{{ pelicula.precioUnitario }}</td>
        <td>{{ pelicula.sinopsis }}</td>
        <td> <div class="links"><a href="{{ path('alquiler_prueba' ,{ 'id':pelicula.id  } ) }}">Alquilar</a>    <a href="{{ path('peliculas_eliminar', {'id':pelicula.id}) }}">eliminar</a>    <a href="{{ path('peliculas_editar', {'id':pelicula.id}) }}">Editar</a></div></td>
    </tr>
    {% endfor %}
</table>
</div>
</div>
{% endblock %}
